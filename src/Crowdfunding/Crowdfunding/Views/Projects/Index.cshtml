@model IEnumerable<Crowdfunding.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<h3 class="display-4 text-center"> Projects </h3>



<div class="container container mt-4 mb-5">

    <hr class="bg-dark mb-4 w-25">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="https://dummyimage.com/350x250/c7c7c7/000.png" alt="Card image cap">
                    <div class="card-block p-3">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProjectName)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.ProjectDescription)</p>
                        <a href="#" class="btn btn-primary rounded-0 mb-2">Read More</a>
                        @Html.ActionLink("ProjectsShow", "ProjectsShow", "Projects", new { id = item.ProjectId }, null)
                        @Html.ActionLink("Back", "Create", "Transactions", new { id = item.ProjectId }, null)
                    </div>
                </div>
            </div>
        }

    </div>

</div>